<Window x:Class="Bookstore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBox x:Name="txtSearch" Grid.Row="0" Margin="310,41,310,366" Text="Enter book title"/>
        <Button x:Name="btnSearch" Margin="351,99,351,301" Content="Search" Click="btnSearch_Click"/>
        <ListBox x:Name="lbSearchResults" Margin="162,164,162,35"/>

    </Grid>
</Window>
